<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="VelocityExecutor.HistoryWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:behaviors="clr-namespace:VelocityExecutor.Behaviors" Title="Script Library" Height="720" Width="1200" WindowStyle="None" AllowsTransparency="True" Background="#00FFFFFF" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
  <WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="0" ResizeBorderThickness="6" GlassFrameThickness="0" CornerRadius="0" />
  </WindowChrome.WindowChrome>
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <BooleanToVisibilityConverter x:Key="BoolToVis" />
      <Style x:Key="SettingsScrollBar" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Width" Value="8" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type ScrollBar}">
              <Grid Width="8" Background="{TemplateBinding Control.Background}">
                <Track Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                  <Track.Thumb>
                    <Thumb>
                      <Control.Template>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                          <Border Name="ThumbBorder" CornerRadius="4" Background="{DynamicResource AccentColor}" Margin="2" Opacity="0.5" RenderTransformOrigin="0.5,0.5">
                            <UIElement.RenderTransform>
                              <ScaleTransform x:Name="thumbScale" ScaleX="1" ScaleY="1" />
                            </UIElement.RenderTransform>
                          </Border>
                          <ControlTemplate.Triggers>
                            <Trigger Property="UIElement.IsMouseOver" Value="True">
                              <TriggerBase.EnterActions>
                                <BeginStoryboard>
                                  <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2" />
                                    <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleX" To="1.3" Duration="0:0:0.2" />
                                  </Storyboard>
                                </BeginStoryboard>
                              </TriggerBase.EnterActions>
                              <TriggerBase.ExitActions>
                                <BeginStoryboard>
                                  <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.2" />
                                    <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2" />
                                  </Storyboard>
                                </BeginStoryboard>
                              </TriggerBase.ExitActions>
                            </Trigger>
                          </ControlTemplate.Triggers>
                        </ControlTemplate>
                      </Control.Template>
                    </Thumb>
                  </Track.Thumb>
                  <Track.IncreaseRepeatButton>
                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" />
                  </Track.IncreaseRepeatButton>
                  <Track.DecreaseRepeatButton>
                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" />
                  </Track.DecreaseRepeatButton>
                </Track>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Width" Value="6" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type ScrollBar}">
              <Track Name="PART_Track" IsDirectionReversed="True">
                <Track.Thumb>
                  <Thumb>
                    <Thumb.Template>
                      <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="#30FFFFFF" CornerRadius="3" />
                      </ControlTemplate>
                    </Thumb.Template>
                  </Thumb>
                </Track.Thumb>
              </Track>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  
  <Border Background="#0d1117" CornerRadius="8" BorderBrush="#21262d" BorderThickness="1">
    <Grid>
      <!-- Main Grid View -->
      <Grid Name="GridView">
        <Grid.RowDefinitions>
          <RowDefinition Height="56" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#161b22" BorderBrush="#21262d" BorderThickness="0,0,0,1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
          <DockPanel LastChildFill="True">
            <!-- Title - Left -->
            <TextBlock DockPanel.Dock="Left" Text="Script Library" FontSize="16" FontWeight="SemiBold" Foreground="#f0f6fc" VerticalAlignment="Center" Margin="20,0,0,0" />
            
            <!-- Close - Right -->
            <Button DockPanel.Dock="Right" Content="✕" Width="32" Height="32" Margin="0,0,16,0" Background="#00FFFFFF" Foreground="#8b949e" FontSize="16" Click="Close_Click" WindowChrome.IsHitTestVisibleInChrome="True">
              <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                  <Border Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
                  <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter TargetName="bd" Property="Background" Value="#da3633" />
                      <Setter Property="Foreground" Value="#FFFFFF" />
                    </Trigger>
                  </ControlTemplate.Triggers>
                </ControlTemplate>
              </Button.Template>
            </Button>
            
            <!-- Search - Center (fills remaining space) -->
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="36" Background="#0d1117" CornerRadius="6" BorderBrush="#30363d" BorderThickness="1">
              <Grid>
                <TextBlock Text="🔍 Search scripts... (press Enter)" Foreground="#484f58" VerticalAlignment="Center" Margin="12,0" IsHitTestVisible="False" FontSize="13">
                  <FrameworkElement.Style>
                    <Style TargetType="{x:Type TextBlock}">
                      <Setter Property="Visibility" Value="Collapsed" />
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                          <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </FrameworkElement.Style>
                </TextBlock>
                <TextBox Name="SearchBox" Background="#00FFFFFF" BorderThickness="0" Foreground="#f0f6fc" FontSize="13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextAlignment="Center" CaretBrush="#f0f6fc" KeyDown="SearchBox_KeyDown" TextChanged="SearchBox_TextChanged" />
              </Grid>
            </Border>
          </DockPanel>
        </Border>
        
        <!-- Content Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" CanContentScroll="False" behaviors:SmoothScrollBehavior.EnableSmoothScroll="True">
          <FrameworkElement.Resources>
            <ResourceDictionary>
              <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource SettingsScrollBar}" />
            </ResourceDictionary>
          </FrameworkElement.Resources>
          <ItemsControl Name="HistoryList" Margin="16,16,16,60">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Columns="4" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Margin="6" CornerRadius="8" ClipToBounds="True" Cursor="Hand" MouseLeftButtonDown="Card_Click">
                  <Border.Background>
                    <SolidColorBrush Color="#161b22" />
                  </Border.Background>
                  <Grid>
                    <Border CornerRadius="8">
                      <Border.Background>
                        <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="UniformToFill" />
                      </Border.Background>
                    </Border>
                    <Border CornerRadius="8">
                      <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                          <GradientStop Color="#00000000" Offset="0.3" />
                          <GradientStop Color="#CC000000" Offset="1" />
                        </LinearGradientBrush>
                      </Border.Background>
                    </Border>
                    <Grid Height="180">
                      <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
                        <Border Background="#238636" CornerRadius="4" Padding="6,3" Margin="0,0,4,0" Visibility="{Binding IsVerified, Converter={StaticResource BoolToVis}}">
                          <TextBlock Text="✓" Foreground="#FFFFFF" FontSize="10" FontWeight="Bold" />
                        </Border>
                        <Border Background="#da3633" CornerRadius="4" Padding="6,3" Margin="0,0,4,0" Visibility="{Binding IsPatched, Converter={StaticResource BoolToVis}}">
                          <TextBlock Text="Patched" Foreground="#FFFFFF" FontSize="10" FontWeight="Bold" />
                        </Border>
                      </StackPanel>
                      <Border Background="#30000000" CornerRadius="4" Padding="6,3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                        <TextBlock Text="{Binding Footer}" Foreground="#FFFFFF" FontSize="10" />
                      </Border>
                      <StackPanel VerticalAlignment="Bottom" Margin="10,0,10,10">
                        <Border Background="#1f6feb" CornerRadius="3" Padding="6,2" HorizontalAlignment="Left" Margin="0,0,0,6">
                          <TextBlock Text="{Binding Subtitle}" Foreground="#FFFFFF" FontSize="10" FontWeight="SemiBold" />
                        </Border>
                        <TextBlock Text="{Binding Title}" Foreground="#f0f6fc" FontSize="13" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
                      </StackPanel>
                    </Grid>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
        
        <!-- Pagination -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,16" Background="#161b22" CornerRadius="8" Padding="16,10" BorderBrush="#30363d" BorderThickness="1">
          <StackPanel Name="PaginationPanel" Orientation="Horizontal">
            <Button Content="◀" Width="28" Height="28" Background="#21262d" Foreground="#8b949e" FontSize="12" Click="PagePrev_Click">
              <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                  <Border Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
                  <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter TargetName="bd" Property="Background" Value="#30363d" />
                    </Trigger>
                  </ControlTemplate.Triggers>
                </ControlTemplate>
              </Button.Template>
            </Button>
            <TextBlock Name="PageText" Text="1 / 1" Foreground="#8b949e" FontSize="13" Margin="16,0" VerticalAlignment="Center" />
            <Button Content="▶" Width="28" Height="28" Background="#21262d" Foreground="#8b949e" FontSize="12" Click="PageNext_Click">
              <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                  <Border Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
                  <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter TargetName="bd" Property="Background" Value="#30363d" />
                    </Trigger>
                  </ControlTemplate.Triggers>
                </ControlTemplate>
              </Button.Template>
            </Button>
          </StackPanel>
        </Border>
      </Grid>
      
      <!-- Detail View Overlay -->
      <Grid Name="DetailView" Visibility="Collapsed" Background="#0d1117">
        <Grid.RowDefinitions>
          <RowDefinition Height="56" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Detail Header -->
        <Border Grid.Row="0" Background="#161b22" BorderBrush="#21262d" BorderThickness="0,0,0,1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
          <Grid Margin="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <Button Content="← Back" Background="#00FFFFFF" Foreground="#58a6ff" FontSize="13" Click="BackToGrid_Click" WindowChrome.IsHitTestVisibleInChrome="True" Cursor="Hand">
                <Button.Template>
                  <ControlTemplate TargetType="{x:Type Button}">
                    <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}">
                      <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                          <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                              <Setter Property="TextDecorations" Value="Underline" />
                            </Trigger>
                          </Style.Triggers>
                        </Style>
                      </TextBlock.Style>
                    </TextBlock>
                  </ControlTemplate>
                </Button.Template>
              </Button>
            </StackPanel>
            <Button Content="✕" Width="32" Height="32" HorizontalAlignment="Right" Background="#00FFFFFF" Foreground="#8b949e" FontSize="16" Click="Close_Click" WindowChrome.IsHitTestVisibleInChrome="True">
              <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                  <Border Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
                  <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter TargetName="bd" Property="Background" Value="#da3633" />
                      <Setter Property="Foreground" Value="#FFFFFF" />
                    </Trigger>
                  </ControlTemplate.Triggers>
                </ControlTemplate>
              </Button.Template>
            </Button>
          </Grid>
        </Border>
        
        <!-- Detail Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" CanContentScroll="False">
          <StackPanel Margin="40,30">
            <!-- Top Section: Image + Info -->
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              
              <!-- Image -->
              <Border Grid.Column="0" Height="250" CornerRadius="12" ClipToBounds="True" Background="#161b22">
                <Grid>
                  <Image Name="DetailImage" Stretch="UniformToFill" />
                  <Border Background="#40000000">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12">
                      <Border Background="#30000000" CornerRadius="4" Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                          <TextBlock Text="👁 " FontSize="11" Foreground="#FFFFFF" />
                          <TextBlock Name="DetailViews" Text="0 views" FontSize="11" Foreground="#FFFFFF" />
                        </StackPanel>
                      </Border>
                    </StackPanel>
                  </Border>
                </Grid>
              </Border>
              
              <!-- Script Info -->
              <StackPanel Grid.Column="1" Margin="30,0,0,0">
                <TextBlock Name="DetailTitle" Text="Script Title" FontSize="26" FontWeight="Bold" Foreground="#f0f6fc" TextWrapping="Wrap" />
                <Border Background="#1f6feb" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" Margin="0,12,0,0">
                  <TextBlock Name="DetailGame" Text="Game Name" FontSize="11" Foreground="#FFFFFF" FontWeight="SemiBold" />
                </Border>
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                  <Button Name="BtnLoad" Content="▶  Execute Script" Width="160" Height="42" Background="#238636" Foreground="#FFFFFF" FontWeight="SemiBold" FontSize="13" Click="LoadScript_Click" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Template>
                      <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="bd" Background="{TemplateBinding Background}" CornerRadius="8">
                          <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                          <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#2ea043" />
                          </Trigger>
                        </ControlTemplate.Triggers>
                      </ControlTemplate>
                    </Button.Template>
                  </Button>
                  <Button Content="📋 Copy Script" Margin="12,0,0,0" Width="130" Height="42" Background="#21262d" Foreground="#8b949e" FontWeight="SemiBold" FontSize="13" Click="CopyScript_Click" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Template>
                      <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="bd" Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="#30363d" BorderThickness="1">
                          <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                          <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#30363d" />
                            <Setter Property="Foreground" Value="#f0f6fc" />
                          </Trigger>
                        </ControlTemplate.Triggers>
                      </ControlTemplate>
                    </Button.Template>
                  </Button>
                </StackPanel>
              </StackPanel>
            </Grid>
            
            <!-- Script Code Section -->
            <Border Margin="0,30,0,0" Background="#161b22" CornerRadius="12" BorderBrush="#30363d" BorderThickness="1">
              <StackPanel>
                <Border Padding="16,12" BorderBrush="#30363d" BorderThickness="0,0,0,1">
                  <TextBlock Text="Script Code" FontSize="14" FontWeight="SemiBold" Foreground="#f0f6fc" />
                </Border>
                <Border Padding="16" MaxHeight="300">
                  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBlock Name="DetailScript" Text="-- Script code will appear here" FontFamily="Consolas" FontSize="12" Foreground="#7ee787" TextWrapping="NoWrap" />
                  </ScrollViewer>
                </Border>
              </StackPanel>
            </Border>
          </StackPanel>
        </ScrollViewer>
      </Grid>
      
      <TextBlock Name="CountText" Visibility="Collapsed" />
      <TextBlock Name="PreviewTitle" Visibility="Collapsed" />
      <TextBlock Name="PreviewSubtitle" Visibility="Collapsed" />
    </Grid>
  </Border>
</Window>
<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="VelocityExecutor.HistoryWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" Title="Script History" Height="650" Width="900" WindowStyle="None" AllowsTransparency="True" Background="#00FFFFFF" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" xmlns:velocityexecutor="clr-namespace:VelocityExecutor;assembly=VelocityExecutor">
  <WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="40" ResizeBorderThickness="6" GlassFrameThickness="0" CornerRadius="0" />
  </WindowChrome.WindowChrome>
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <FontFamily x:Key="MonoFont">Consolas, Fira Code, JetBrains Mono, Courier New</FontFamily>
      <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
      <Style x:Key="ModeRadioButton" TargetType="{x:Type RadioButton}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Foreground" Value="#888" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type RadioButton}">
              <Border Name="bd" Background="{TemplateBinding Control.Background}" CornerRadius="4">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                  <Setter TargetName="bd" Value="{DynamicResource AccentColor}" Property="Border.Background" />
                  <Setter Property="Foreground" Value="#FFFFFFFF" />
                </Trigger>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter Property="Foreground" Value="#FFFFFFFF" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="PaginationButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#2A2A2A" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Name="bd" Background="{TemplateBinding Control.Background}" CornerRadius="4">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="bd" Property="Border.Background" Value="#3A3A3A" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter Property="UIElement.Opacity" Value="0.3" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Width" Value="6" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type ScrollBar}">
              <Grid>
                <Track Name="PART_Track" IsDirectionReversed="True">
                  <Track.Thumb>
                    <Thumb>
                      <Control.Template>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                          <Border Background="#33FFFFFF" CornerRadius="3" />
                        </ControlTemplate>
                      </Control.Template>
                    </Thumb>
                  </Track.Thumb>
                </Track>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Border Background="#0F0F0F" CornerRadius="8" BorderBrush="#2A2A2A" BorderThickness="1">
    <UIElement.Effect>
      <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="10" Opacity="0.6" />
    </UIElement.Effect>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="320" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid Column="0" Background="#141414">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,15,0,10">
          <Border Height="30" Background="#00FFFFFF" Margin="20,0,20,10" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock Text="Script Library" FontWeight="SemiBold" FontSize="16" Foreground="#EEE" VerticalAlignment="Center" />
          </Border>
          <Border Background="#1E1E1E" CornerRadius="6" Margin="20,0" Padding="2">
            <Grid Height="28">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <RadioButton Name="ModeHistory" Grid.Column="0" Content="History" GroupName="LibMode" Style="{StaticResource ModeRadioButton}" Checked="Mode_Checked" />
              <RadioButton Name="ModeCloud" Grid.Column="1" Content="ScriptBlox" GroupName="LibMode" Style="{StaticResource ModeRadioButton}" Checked="Mode_Checked" />
            </Grid>
          </Border>
        </StackPanel>
        <Border Grid.Row="1" Margin="20,0,20,10" Background="#1E1E1E" CornerRadius="6" Height="36">
          <Grid>
            <TextBlock Text="Search..." Foreground="#555" VerticalAlignment="Center" Margin="12,0" IsHitTestVisible="False">
              <FrameworkElement.Style>
                <Style TargetType="{x:Type TextBlock}">
                  <Setter Property="Visibility" Value="Collapsed" />
                  <Style.Triggers>
                    <DataTrigger Value="" Binding="{Binding Text, ElementName=SearchBox}">
                      <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="{x:Null}">
                      <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </FrameworkElement.Style>
            </TextBlock>
            <TextBox Name="SearchBox" Background="#00FFFFFF" BorderThickness="0" Foreground="#FFFFFFFF" VerticalContentAlignment="Center" Padding="12,0" CaretBrush="#FFFFFFFF" KeyDown="SearchBox_KeyDown" TextChanged="SearchBox_TextChanged" />
          </Grid>
        </Border>
        <ListBox Name="HistoryList" Grid.Row="2" Background="#00FFFFFF" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="12,0" SelectionChanged="HistoryList_SelectionChanged">
          <ItemsControl.ItemContainerStyle>
            <Style TargetType="{x:Type ListBoxItem}">
              <Setter Property="Background" Value="#00FFFFFF" />
              <Setter Property="Margin" Value="0,2" />
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Border Name="bd" Background="{TemplateBinding Control.Background}" CornerRadius="6" Padding="12,10" SnapsToDevicePixels="True">
                      <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                      <Trigger Property="UIElement.IsMouseOver" Value="True">
                        <Setter TargetName="bd" Property="Border.Background" Value="#1E1E1E" />
                      </Trigger>
                      <Trigger Property="ListBoxItem.IsSelected" Value="True">
                        <Setter TargetName="bd" Property="Border.Background" Value="#252525" />
                      </Trigger>
                    </ControlTemplate.Triggers>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </ItemsControl.ItemContainerStyle>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                  <TextBlock FontFamily="{StaticResource MonoFont}" FontSize="12" Foreground="#FFFFFFFF" TextTrimming="CharacterEllipsis" Text="{Binding Title}" />
                  <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock FontSize="10" Foreground="{StaticResource AccentColor}" FontWeight="Bold" Margin="0,0,8,0" Text="{Binding Subtitle}" />
                    <TextBlock FontSize="10" Foreground="#555" Text="{Binding Footer}" />
                  </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                  <TextBlock Text="✓" Foreground="#28CD41" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center" Visibility="{Binding IsVerified, Converter={StaticResource BooleanToVisibilityConverter}}" />
                  <Button Content="📋" Background="#00FFFFFF" BorderThickness="0" Foreground="#666" FontSize="14" Padding="4" VerticalAlignment="Center" ToolTip="Copy Link" Tag="{Binding CopyText}" Click="CopyUrl_Click">
                    <FrameworkElement.Style>
                      <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                          <Trigger Property="UIElement.IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFFFF" />
                          </Trigger>
                        </Style.Triggers>
                      </Style>
                    </FrameworkElement.Style>
                  </Button>
                </StackPanel>
              </Grid>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ListBox>
        <Border Grid.Row="3" Padding="15" BorderBrush="#1E1E1E" BorderThickness="0,1,0,0">
          <Grid>
            <TextBlock Name="CountText" Text="0 items" FontSize="11" Foreground="#444" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <StackPanel Name="PaginationPanel" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed">
              <Button Content="&lt;" Style="{StaticResource PaginationButton}" Click="PagePrev_Click" />
              <TextBlock Name="PageText" Text="1" Foreground="#FFFFFFFF" FontSize="12" Margin="12,0" VerticalAlignment="Center" />
              <Button Content="&gt;" Style="{StaticResource PaginationButton}" Click="PageNext_Click" />
            </StackPanel>
          </Grid>
        </Border>
      </Grid>
      <Grid Column="1" Background="#0F0F0F">
        <Grid.RowDefinitions>
          <RowDefinition Height="50" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
          <Button Content="✕" Width="30" Height="30" Background="#00FFFFFF" BorderThickness="0" Foreground="#555" FontSize="14" WindowChrome.IsHitTestVisibleInChrome="True" Click="Close_Click">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Button}">
                <Setter Property="Template">
                  <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                      <Border Background="{TemplateBinding Control.Background}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                      </Border>
                      <ControlTemplate.Triggers>
                        <Trigger Property="UIElement.IsMouseOver" Value="True">
                          <Setter Property="Background" Value="#C42B1C" />
                          <Setter Property="Foreground" Value="#FFFFFFFF" />
                        </Trigger>
                      </ControlTemplate.Triggers>
                    </ControlTemplate>
                  </Setter.Value>
                </Setter>
              </Style>
            </FrameworkElement.Style>
          </Button>
        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
          <Button Name="BtnLoad" Content="LOAD TO EXECUTOR" Width="160" Height="36" Background="{StaticResource AccentColor}" Foreground="#FFFFFFFF" FontWeight="Bold" FontSize="11" FontFamily="{StaticResource MonoFont}" WindowChrome.IsHitTestVisibleInChrome="True" Click="LoadScript_Click">
            <FrameworkElement.Resources>
              <ResourceDictionary>
                <Style x:Key="{x:Type Border}" TargetType="{x:Type Border}">
                  <Setter Property="Border.CornerRadius" Value="6" />
                </Style>
              </ResourceDictionary>
            </FrameworkElement.Resources>
            <Control.Template>
              <ControlTemplate TargetType="{x:Type Button}">
                <Border Name="b" Background="{TemplateBinding Control.Background}" CornerRadius="6">
                  <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                      <TextBlock Text="▶" Margin="0,0,8,0" FontSize="10" />
                      <ContentPresenter />
                    </StackPanel>
                  </Grid>
                </Border>
                <ControlTemplate.Triggers>
                  <Trigger Property="UIElement.IsMouseOver" Value="True">
                    <Setter TargetName="b" Property="UIElement.Opacity" Value="0.9" />
                    <Setter TargetName="b" Property="UIElement.Effect">
                      <Setter.Value>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4" Color="{Binding Color, Source={StaticResource AccentColor}}" />
                      </Setter.Value>
                    </Setter>
                  </Trigger>
                  <Trigger Property="UIElement.IsEnabled" Value="False">
                    <Setter TargetName="b" Property="UIElement.Opacity" Value="0.3" />
                    <Setter TargetName="b" Property="Border.Background" Value="#333" />
                  </Trigger>
                </ControlTemplate.Triggers>
              </ControlTemplate>
            </Control.Template>
          </Button>
          <Button Name="BtnDelete" Content="DELETE" Margin="12,0,0,0" Width="100" Height="36" Background="#1A1A1A" Foreground="#888" FontWeight="Bold" FontSize="11" FontFamily="{StaticResource MonoFont}" WindowChrome.IsHitTestVisibleInChrome="True" Click="DeleteEntry_Click">
            <Control.Template>
              <ControlTemplate TargetType="{x:Type Button}">
                <Border Name="b" Background="{TemplateBinding Control.Background}" BorderBrush="#333" BorderThickness="1" CornerRadius="6">
                  <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="🗑" Margin="0,0,6,0" FontSize="12" />
                    <ContentPresenter />
                  </StackPanel>
                </Border>
                <ControlTemplate.Triggers>
                  <Trigger Property="UIElement.IsMouseOver" Value="True">
                    <Setter TargetName="b" Property="Border.Background" Value="#2A0000" />
                    <Setter TargetName="b" Property="Border.BorderBrush" Value="#FF4444" />
                    <Setter Property="Control.Foreground" Value="#FF4444" />
                  </Trigger>
                  <Trigger Property="UIElement.IsEnabled" Value="False">
                    <Setter TargetName="b" Property="UIElement.Opacity" Value="0.3" />
                  </Trigger>
                </ControlTemplate.Triggers>
              </ControlTemplate>
            </Control.Template>
          </Button>
        </StackPanel>
        <Border Grid.Row="1" Margin="20,0,20,20" Background="#0A0A0A" CornerRadius="6" BorderBrush="#1E1E1E" BorderThickness="1">
          <wv2:WebView2 Name="PreviewMonaco" DefaultBackgroundColor="#0A0A0A" />
        </Border>
      </Grid>
    </Grid>
  </Border>
</Window>
      <Style x:Key="ModernWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
        <Setter Property="Background" Value="{StaticResource AppBackground}" />
        <Setter Property="Foreground" Value="{StaticResource ControlForeground}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
      </Style>
      <Style x:Key="SatelliteWindowStyle" TargetType="{x:Type Window}" BasedOn="{StaticResource ModernWindowStyle}">
        <Setter Property="Window.WindowStyle" Value="None" />
        <Setter Property="Window.ResizeMode" Value="NoResize" />
        <Setter Property="Window.ShowInTaskbar" Value="False" />
        <Setter Property="Window.AllowsTransparency" Value="True" />
        <Setter Property="Background" Value="#00FFFFFF" />
      </Style>
      <Style x:Key="TitleBarButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Foreground" Value="{StaticResource ControlForeground}" />
        <Setter Property="Width" Value="45" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Name="b" Background="{TemplateBinding Control.Background}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="b" Property="Border.Background" Value="#33FFFFFF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="b" Property="Border.Background" Value="#11FFFFFF" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="PremiumButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="BorderBrush" Value="#00FFFFFF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Name="border" Background="{TemplateBinding Control.Background}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" CornerRadius="6">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <ContentPresenter Name="content" Margin="6,0" />
                </StackPanel>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="border" Property="Border.Background" Value="#22FFFFFF" />
                  <Setter TargetName="border" Property="Border.BorderBrush" Value="#66FFFFFF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="border" Property="Border.Background" Value="#151515" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="ColorDotButton" TargetType="{x:Type Button}">
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Grid>
                <Ellipse Name="dot" Fill="{TemplateBinding Control.Background}" Stroke="#00FFFFFF" StrokeThickness="2" />
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="dot" Property="Shape.Stroke" Value="#FFFFFFFF" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="PremiumCheckBox" TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type CheckBox}">
              <Grid Background="#00FFFFFF">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ContentPresenter VerticalAlignment="Center" Margin="0,0,10,0" />
                <Border Name="track" Grid.Column="1" Width="36" Height="20" CornerRadius="10" Background="#333" BorderBrush="#555" BorderThickness="1">
                  <Ellipse Name="knob" Width="14" Height="14" Fill="#AAA" HorizontalAlignment="Left" Margin="2,0,0,0">
                    <UIElement.RenderTransform>
                      <TranslateTransform X="0" />
                    </UIElement.RenderTransform>
                  </Ellipse>
                </Border>
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                  <Setter TargetName="track" Value="{DynamicResource AccentColor}" Property="Border.Background" />
                  <Setter TargetName="track" Value="{DynamicResource AccentColor}" Property="Border.BorderBrush" />
                  <Setter TargetName="knob" Property="Shape.Fill" Value="#FFFFFFFF" />
                  <Setter TargetName="knob" Property="HorizontalAlignment" Value="Right" />
                  <Setter TargetName="knob" Property="Margin" Value="0,0,2,0" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>

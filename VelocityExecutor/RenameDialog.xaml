<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="VelocityExecutor.RenameDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Rename Script" Height="140" Width="300" WindowStyle="None" AllowsTransparency="True" Background="#00FFFFFF" WindowStartupLocation="CenterScreen" xmlns:velocityexecutor="clr-namespace:VelocityExecutor;assembly=VelocityExecutor">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <SolidColorBrush x:Key="DialogBg" Color="#252525" Opacity="0.98" />
      <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF" />
      <SolidColorBrush x:Key="AccentColor" Color="#0A84FF" />
      <Style x:Key="{x:Type Button}" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource AccentColor}" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Background="{TemplateBinding Control.Background}" CornerRadius="6">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5" />
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Border Background="{StaticResource DialogBg}" CornerRadius="12" BorderBrush="#33FFFFFF" BorderThickness="1">
    <UIElement.Effect>
      <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4" />
    </UIElement.Effect>
    <Grid Margin="15">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <TextBlock Text="Rename Script" Foreground="{StaticResource PrimaryText}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />
      <TextBox Name="NameBox" Grid.Row="1" Height="28" Background="#333333" Foreground="#FFFFFFFF" BorderThickness="0" VerticalContentAlignment="Center" Padding="5,0" />
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
        <Button Content="Cancel" Background="#00FFFFFF" Foreground="#A0A0A0" Margin="0,0,10,0" Click="Cancel_Click" />
        <Button Content="Rename" Width="70" Click="Rename_Click" />
      </StackPanel>
    </Grid>
  </Border>
</Window>